{
  "name": "@xbuildr/xbuildr",
  "version": "0.0.0",
  "repository": "git@github.com:xbuildr/xbuildr.git",
  "author": "JounQin (https://www.1stG.me) <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/@xbuildr/*"
  ],
  "packageManager": "yarn@1.22.19",
  "scripts": {
    "build": "run-s build:lib build:app",
    "build:app": "rimraf docs && esr scripts/app.ts",
    "build:lib": "tsc -b && esr scripts/lib.ts",
    "clean": "rimraf docs packages/*/{lib,*.tsbuildinfo}",
    "dev": "nodemon",
    "lint": "run-p lint:*",
    "lint:es": "eslint . --cache",
    "lint:ts": "vue-tsc --incremental false --noEmit",
    "prepare": "simple-git-hooks && yarn-deduplicate --strategy fewer || exit 0",
    "prerelease": "yarn build:lib",
    "release": "changeset publish",
    "serve": "sirv docs",
    "test": "jest",
    "typecov": "type-coverage",
    "vercel-build": "yarn build"
  },
  "devDependencies": {
    "@1stg/common-config": "^6.1.4",
    "@changesets/changelog-github": "^0.4.6",
    "@changesets/cli": "^2.24.2",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.7.1",
    "consola": "^2.15.3",
    "esbuild": "^0.15.1",
    "esbuild-runner": "^2.2.2",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19",
    "sirv-cli": "^2.0.2",
    "type-coverage": "^2.22.0",
    "typescript": "^4.7.4",
    "vue": "^3.2.37",
    "vue-tsc": "^0.40.1",
    "yarn-deduplicate": "^5.0.0"
  },
  "resolutions": {
    "prettier": "^2.7.1"
  },
  "commitlint": {
    "extends": "@1stg"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@1stg",
    "rules": {
      "unicorn/prefer-top-level-await": "off"
    },
    "overrides": [
      {
        "files": ".github/*.yml",
        "rules": {
          "unicorn/filename-case": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "coverage",
    "docs",
    "packages/**/lib",
    "!/.github",
    "!/.*.js"
  ],
  "jest": {
    "collectCoverage": true,
    "transform": {
      "\\.ts$": "./esr-jest.mjs"
    }
  },
  "nodemonConfig": {
    "exec": "esr scripts/serve.ts",
    "ext": "ts",
    "watch": [
      "scripts/serve.ts",
      "packages/html/src"
    ]
  },
  "prettier": "@1stg/prettier-config",
  "remarkConfig": {
    "plugins": [
      "@1stg/remark-config"
    ]
  },
  "renovate": {
    "extends": [
      "@1stg"
    ]
  },
  "typeCoverage": {
    "atLeast": 100,
    "cache": true,
    "detail": true,
    "ignoreAsAssertion": true,
    "ignoreCatch": true,
    "ignoreNonNullAssertion": true,
    "showRelativePath": true,
    "strict": true,
    "update": true
  }
}
